{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "services",
    "hosts"
  ],
  "properties": {
    "services": {
      "type": "string"
    },
    "hosts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "ipv4", "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "ipv4": {
            "type": "string"
          }
        }
      }
    }
  }
}
